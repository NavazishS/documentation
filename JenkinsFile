pipeline {
    agent {
        docker {
            image 'nawdocker/docker-curl:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Get Host IP') {
            steps {
                script {
                    def defaultGatewayIp = sh(script: "ip route | grep default | awk '{print \$3}'", returnStdout: true).trim()
                    echo "Host IP: ${defaultGatewayIp}"
                }
            }
        }
    }
}
